<% if answer.accepted? %>
  <form action="/answers/<%= answer.id %>/unaccept" method="post" data-remote="true" class="accept-form" id="answer-<%= answer.id %>-unaccept">
<% else %>
  <form action="/answers/<%= answer.id %>/accept" method="post" data-remote="true" class="accept-form" id="answer-<%= answer.id %>-accept">
<% end %>
  <button type="submit" name="value" value="1" class="arrow accept">
    <%= image_tag 'accept-on.png', class: accept_class(answer, true) %>
    <%= image_tag 'accept-off.png', class: accept_class(answer, false) %>
  </button>
</form>