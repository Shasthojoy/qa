<!DOCTYPE html>
<html>
  <head>
    <title>QA</title>
    <%= stylesheet_link_tag :application %>
    <%= javascript_include_tag :application %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class="navbar">
      <div class="navbar-inner">
        <div class="container">
          <%= link_to "QA", "/", class: :brand %>
          <ul class="nav">
            <li><%= link_to 'Ask Question', new_question_path %></li>
          </ul>
          <ul class="nav pull-right">
            <% if logged_in? %>
            
            <% else %>
              <li><%= link_to "Login", login_path %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>