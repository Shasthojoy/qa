<%= form_for @question do |f| %>
  <%= f.error_messages %>
  <div class="clearfix">
    <%= f.label :title %>
    <div class="input">
      <%= f.text_field :title, :class => :xxlarge %>
    </div>
  </div>
  <div class="clearfix">
    <%= f.label :body %>
    <div class="input">
      <%= f.text_area :body, :class => :xxlarge %>
    </div>
  </div>
  <div class="clearfix">
    <%= f.label :tag_list, "Tags" %>
    <div class="input">
      <%= f.text_field :tag_list %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit :class => "btn primary" %>
  </div>
<% end %>
