<% title "Questions" %>

<section id="questions">
  <div class="sidebar">
    <h3>Recent Badges</h3>
    <ul id="recent-badges">
      <% @recent_badges.each do |badge| %>
        <li><%= link_to badge.name, badge_url(badge), :class => "badge #{badge.type}" %> <%= link_to badge.user.name, user_url(badge.user) %></li>
      <% end %>
    </ul>
  </div>
  <div class="main">
    <%= render :partial => "question", :collection => @questions %>
    <%= paginate @questions %>
  </div>
</section>