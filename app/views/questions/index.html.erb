<% title "Questions" %>

<section id="questions">
  <div class="row">
    <div class="span3 columns">
      <h3>Recent Tags</h3>
      <ul>
        <% @recent_tags.each do |tag| %>
          <li><%= tag.name %> x<%= tag.count %></li>
        <% end %>
      </ul>
    </div>
    <div class="span13 columns">
      <%= render :partial => "question", :collection => @questions, :locals => { :width => 10 } %>
      <%= paginate @questions %>
    </div>
  </div>
</section>
