<div id="question-<%= question.id %>" class="row">
  <div class="span2 columns">
    <div class="mini-count"><%= pluralize_count question.vote_count, "vote" %></div>
    <div class="mini-count"><%= pluralize_count question.answers_count, "answer" %></div>
  </div>
  <div class="span<%= width %> columns">
    <h3><%= link_to question.title, question %></h3>
    <p><%= render :partial => 'questions/tags', :locals => { :tags => question.tags } %></p>
  </div>
</div>
