<div class="page-header">
  <h1><%= @question.title %></h1>
</div>

<div class="question" id="question-<%= @question.id %>">
  <div class="body"><%=format @question.body %></div>
  <div class="meta">
    <div class="righto">
      <p>asked <%= time_ago_in_words @question.created_at %> ago by <%= @question.user.name %></p>
    </div>
  </div>
</div>