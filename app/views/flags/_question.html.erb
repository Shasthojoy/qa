<div class="row">
  <div class="span1"><%= flag.flaggable.vote_count %></div>
  <div class="span15">
    <h3><%= flag.flaggable.title %></h3>
    <%= flag.flaggable.body.markdown %>
    <p><%= flag.user.username %> flagged this <%= time_ago_in_words flag.created_at %> ago because he thinks it <%=t "flags.reasons.#{flag.reason}" %>. <%= link_to "dismiss?", dismiss_flag_url(flag) %></p>
  </div>
</div>

